---
import '../style/main.css';
import logo from '../assets/images/logo-inline.svg';
import ActionButton from '../components/ActionButton.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon " href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-[#010D1A] text-white">
    <div class="container mx-auto max-w-7xl">
      <header>
        <div class="flex justify-between mx-auto max-w-7xl py-12">
          <img src={logo.src} alt="provencraft-logo" />
          <ActionButton />
        </div>
      </header>
      <slot />
      <div class="pt-16 text-white/60">
        <div class="flex justify-between">
          <div>
            <img class="h-5" src={logo.src} alt="provencraft-logo" />
            <p class="pt-20 pb-24">
              Designed by <span>
                <a
                  href="https://www.linkedin.com/in/and%C5%BEela-kate-p%C5%ABli%C5%86a/"
                  class="underline underline-offset-auto"
                >
                  Andžela Kate Pūliņa</a
                >
              </span>
            </p>
          </div>
          <div>Copyright © 2023</div>
        </div>
      </div>
    </div>
  </body>
</html>
